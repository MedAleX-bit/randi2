<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>


	<application>
		<variable-resolver>
			org.springframework.web.jsf.DelegatingVariableResolver
		</variable-resolver>
	</application>
	<validator>
		<validator-id>
			de.randi2.jsf.validators.RANDI2_VALIDATOR
		</validator-id>
		<validator-class>
			de.randi2.jsf.validators.RANDI2Validator
		</validator-class>
	</validator>
	<converter>
		<converter-id>
			de.randi2.jsf.converters.GENDER_CONVERTER
		</converter-id>
		<converter-class>
			de.randi2.jsf.converters.GenderConverter
		</converter-class>
	</converter>

	<managed-bean>
		<description>
			This glueBean takes care of the Login and Person Beans.
		</description>
		<managed-bean-name>loginHandler</managed-bean-name>
		<managed-bean-class>
			de.randi2.jsf.handlers.LoginHandler
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>login</property-name>
			<property-class>de.randi2.model.Login</property-class>
			<null-value />
		</managed-property>
		<managed-property>
			<property-name>person</property-name>
			<property-class>de.randi2.model.Person</property-class>
			<null-value />
		</managed-property>
		<managed-property>
			<property-name>loginDao</property-name>
			<property-class>de.randi2.dao.LoginDao</property-class>
			<value>#{loginDAO}</value>
		</managed-property>
		<managed-property>
			<property-name>personDao</property-name>
			<property-class>de.randi2.dao.PersonDao</property-class>
			<value>#{personDAO}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<description>The glueBean for the Center bean.</description>
		<managed-bean-name>centerHendler</managed-bean-name>
		<managed-bean-class>
			de.randi2.jsf.handlers.CenterHandler
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<description>
			This bean has all needed attributes for the register page.
		</description>
		<managed-bean-name>registerPage</managed-bean-name>
		<managed-bean-class>
			de.randi2.jsf.pages.RegisterPage
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<description>
			This bean has all needed attributes for the randi2 page.
		</description>
		<managed-bean-name>randi2Page</managed-bean-name>
		<managed-bean-class>
			de.randi2.jsf.pages.Randi2Page
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<description>
			This bean has all important strings for the application.
		</description>
		<managed-bean-name>randi2</managed-bean-name>
		<managed-bean-class>
			de.randi2.jsf.Randi2
		</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>

	

	<navigation-rule>
		<display-name>login</display-name>
		<from-view-id>/login.jspx</from-view-id>
		<navigation-case>
			<from-action>#{loginHandler.loginUser}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/randi2.jspx</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>randi2</display-name>
		<from-view-id>/randi2.jspx</from-view-id>
		<navigation-case>
			<from-action>#{loginHandler.logoutUser}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/logout.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>register</display-name>
		<from-view-id>/register.jspx</from-view-id>
		<navigation-case>
			<from-outcome>ok</from-outcome>
			<to-view-id>/login.jspx</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>
